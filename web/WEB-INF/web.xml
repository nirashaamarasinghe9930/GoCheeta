<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>Controller.register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>Controller.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registerDriver</servlet-name>
        <servlet-class>ManageDrivers.registerDriver</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>adminLogin</servlet-name>
        <servlet-class>AdminController.adminLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>driverLogin</servlet-name>
        <servlet-class>ManageDrivers.driverLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>bookDriver</servlet-name>
        <servlet-class>BookController.bookDriver</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registerDriver</servlet-name>
        <url-pattern>/registerDriver</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>adminLogin</servlet-name>
        <url-pattern>/adminLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>driverLogin</servlet-name>
        <url-pattern>/driverLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>bookDriver</servlet-name>
        <url-pattern>/bookDriver</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
